pipeline {
  agent {
    docker {
      image 'python:3.6'
    }

  }
  stages {
    stage('Configure Environment') {
      steps {
        sh 'pip install -r requirements-dev.txt'
        sh 'pip install -r requirements.txt'
      }
    }

    stage('Install katxgpu package') {
      steps {
        sh 'pip install -e .'
      }
    }

    stage('Run pytest') {
      steps {
        sh 'pytest -v --junitxml=reports/result.xml'
      }
    }

  }
}